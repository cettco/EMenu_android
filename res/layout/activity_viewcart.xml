<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:listViewAttr="http://schemas.android.com/apk/res/com.emenu.app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        

            <cn.trinea.android.common.view.DropDownListView
                android:id="@+id/cartListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="false"
                listViewAttr:isAutoLoadOnBottom="false"
                listViewAttr:isDropDownStyle="false"
                listViewAttr:isOnBottomStyle="false" />

    </LinearLayout>
<ProgressBar
        android:id="@+id/cartViewProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleLarge"
        >
</ProgressBar>
</LinearLayout>
