<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:listViewAttr="http://schemas.android.com/apk/res/com.emenu.app"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:background="#ffffffff"
    android:gravity="center_vertical|center_horizontal">
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <cn.trinea.android.common.view.DropDownListView
        android:id="@+id/cartListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawSelectorOnTop="false"
        listViewAttr:isAutoLoadOnBottom="false"
        listViewAttr:isDropDownStyle="false"
        listViewAttr:isOnBottomStyle="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/viewCartConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认订单" 
            android:background="@drawable/mybutton_background"/>

        <Button
            android:id="@+id/viewCartRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="刷新"
            android:background="@drawable/mybutton_background" />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>
    
   <ProgressBar
        android:id="@+id/cartViewProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleLarge" >
    </ProgressBar>
</FrameLayout>



